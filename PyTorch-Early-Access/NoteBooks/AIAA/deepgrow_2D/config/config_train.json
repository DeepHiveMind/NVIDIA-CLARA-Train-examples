{
  "epochs": 100,
  "learning_rate": 1e-4,
  "num_interval_per_valid": 1,
  "use_gpu": true,
  "multi_gpu": false,
  "amp": false,
  "determinism": {
    "random_seed": 42
  },
  "cudnn_benchmark": false,
  "dont_load_ckpt_model": true,
  "train": {
    "loss": {
      "name": "DiceLoss",
      "args": {
        "sigmoid": true,
        "squared_pred": true
      }
    },
    "optimizer": {
      "name": "Adam",
      "args": {
        "lr": "{learning_rate}"
      }
    },
    "lr_scheduler": {
      "name": "StepLR",
      "args": {
        "step_size": 5000,
        "gamma": 0.1
      }
    },
    "model": {
      "name": "BasicUnet",
      "args": {
        "dimensions": 2,
        "in_channels": 3,
        "out_channels": 1,
        "features": [
          32,
          64,
          128,
          256,
          512,
          32
        ]
      }
    },
    "pre_transforms": [
      {
        "name": "LoadImaged",
        "args": {
          "keys": [
            "image",
            "label"
          ]
        }
      },
      {
        "name": "AddChanneld",
        "args": {
          "keys": [
            "image",
            "label"
          ]
        }
      },
      {
        "name": "SpatialCropForegroundd",
        "path": "monai.apps.deepgrow.transforms.SpatialCropForegroundd",
        "args": {
          "keys": [
            "image",
            "label"
          ],
          "source_key": "label",
          "spatial_size": [
            256,
            256
          ]
        }
      },
      {
        "name": "Resized",
        "args": {
          "keys": [
            "image",
            "label"
          ],
          "spatial_size": [
            256,
            256
          ],
          "mode": [
            "area",
            "nearest"
          ]
        }
      },
      {
        "name": "NormalizeIntensityd",
        "args": {
          "keys": "image",
          "subtrahend": 208.0,
          "divisor": 388.0
        }
      },
      {
        "name": "AddInitialSeedPointd",
        "path": "monai.apps.deepgrow.transforms.AddInitialSeedPointd",
        "args": {
          "label": "label",
          "guidance": "guidance",
          "sids": "sids"
        }
      },
      {
        "name": "AddGuidanceSignald",
        "path": "monai.apps.deepgrow.transforms.AddGuidanceSignald",
        "args": {
          "image": "image",
          "guidance": "guidance"
        }
      },
      {
        "name": "ToTensord",
        "args": {
          "keys": [
            "image",
            "label"
          ]
        }
      }
    ],
    "dataset": {
      "name": "PersistentDataset",
      "data_list_file_path": "{DATASET_JSON}",
      "data_file_base_dir": "{DATA_ROOT}",
      "data_list_key": "training"
    },
    "dataloader": {
      "name": "DataLoader",
      "args": {
        "batch_size": 8,
        "shuffle": true,
        "num_workers": 16
      }
    },
    "inferer": {
      "name": "SimpleInferer"
    },
    "iteration": {
      "name": "ClickInteraction",
      "path": "deepgrow.interaction.ClickInteraction",
      "args": {
        "max_interactions": 15,
        "key_probability": "probability",
        "transforms": [
          {
            "name": "Activationsd",
            "path": "monai.transforms.Activationsd",
            "args": {
              "keys": "pred",
              "sigmoid": true
            }
          },
          {
            "name": "ToNumpyd",
            "path": "monai.transforms.ToNumpyd",
            "args": {
              "keys": [
                "image",
                "label",
                "pred",
                "probability",
                "guidance"
              ]
            }
          },
          {
            "name": "FindDiscrepancyRegionsd",
            "path": "monai.apps.deepgrow.transforms.FindDiscrepancyRegionsd",
            "args": {
              "label": "label",
              "pred": "pred",
              "discrepancy": "discrepancy",
              "batched": true
            }
          },
          {
            "name": "AddRandomGuidanced",
            "path": "monai.apps.deepgrow.transforms.AddRandomGuidanced",
            "args": {
              "guidance": "guidance",
              "discrepancy": "discrepancy",
              "probability": "probability",
              "batched": true
            }
          },
          {
            "name": "AddGuidanceSignald",
            "path": "monai.apps.deepgrow.transforms.AddGuidanceSignald",
            "args": {
              "image": "image",
              "guidance": "guidance",
              "batched": true
            }
          },
          {
            "name": "ToTensord",
            "path": "monai.transforms.ToTensord",
            "args": {
              "keys": [
                "image",
                "label"
              ]
            }
          }
        ],
        "train": true
      }
    },
    "handlers": [
      {
        "name": "CheckpointLoader",
        "disabled": "{dont_load_ckpt_model}",
        "args": {
          "load_path": "{MMAR_CKPT}",
          "load_dict": [
            "model"
          ]
        }
      },
      {
        "name": "LrScheduleHandler",
        "args": {
          "print_lr": true
        }
      },
      {
        "name": "ValidationHandler",
        "args": {
          "interval": "{num_interval_per_valid}",
          "epoch_level": true
        }
      },
      {
        "name": "StatsHandler",
        "rank": 0,
        "args": {
          "tag_name": "train_loss",
          "output_transform": "lambda x: x['loss']"
        }
      },
      {
        "name": "TensorBoardStatsHandler",
        "rank": 0,
        "args": {
          "log_dir": "{MMAR_CKPT_DIR}",
          "tag_name": "train_loss",
          "output_transform": "lambda x: x['loss']"
        }
      },
      {
        "name": "CheckpointSaver",
        "rank": 0,
        "args": {
          "save_dir": "{MMAR_CKPT_DIR}",
          "save_dict": [
            "model",
            "optimizer",
            "lr_scheduler"
          ],
          "save_final": true,
          "save_interval": 20,
          "final_filename": "checkpoint_final.pt"
        }
      }
    ],
    "post_transforms": [
      {
        "name": "Activationsd",
        "args": {
          "keys": "pred",
          "sigmoid": true
        }
      },
      {
        "name": "AsDiscreted",
        "args": {
          "keys": "pred",
          "threshold_values": true,
          "logit_thresh": 0.5
        }
      }
    ],
    "metrics": [
      {
        "name": "MeanDice",
        "log_label": "train_dice",
        "is_key_metric": true,
        "args": {
          "include_background": false,
          "output_transform": "lambda x: (x['pred'], x['label'])"
        }
      }
    ],
    "trainer": {
      "name": "SupervisedTrainer",
      "args": {
        "max_epochs": "{epochs}"
      }
    }
  },
  "validate": {
    "pre_transforms": [
      {
        "ref": "LoadImaged"
      },
      {
        "ref": "AddChanneld"
      },
      {
        "ref": "SpatialCropForegroundd"
      },
      {
        "ref": "Resized"
      },
      {
        "ref": "NormalizeIntensityd"
      },
      {
        "ref": "AddInitialSeedPointd"
      },
      {
        "ref": "AddGuidanceSignald"
      },
      {
        "ref": "ToTensord"
      }
    ],
    "dataset": {
      "name": "PersistentDataset",
      "data_list_file_path": "{DATASET_JSON}",
      "data_file_base_dir": "{DATA_ROOT}",
      "data_list_key": "validation"
    },
    "dataloader": {
      "name": "DataLoader",
      "args": {
        "batch_size": 8,
        "shuffle": false,
        "num_workers": 8
      }
    },
    "inferer": {
      "name": "SimpleInferer"
    },
    "iteration": {
      "name": "ClickInteraction",
      "path": "deepgrow.interaction.ClickInteraction",
      "args": {
        "max_interactions": 5,
        "key_probability": "probability",
        "transforms": [
          {
            "name": "Activationsd",
            "path": "monai.transforms.Activationsd",
            "args": {
              "keys": "pred",
              "sigmoid": true
            }
          },
          {
            "name": "ToNumpyd",
            "path": "monai.transforms.ToNumpyd",
            "args": {
              "keys": [
                "image",
                "label",
                "pred",
                "probability",
                "guidance"
              ]
            }
          },
          {
            "name": "FindDiscrepancyRegionsd",
            "path": "monai.apps.deepgrow.transforms.FindDiscrepancyRegionsd",
            "args": {
              "label": "label",
              "pred": "pred",
              "discrepancy": "discrepancy",
              "batched": true
            }
          },
          {
            "name": "AddRandomGuidanced",
            "path": "monai.apps.deepgrow.transforms.AddRandomGuidanced",
            "args": {
              "guidance": "guidance",
              "discrepancy": "discrepancy",
              "probability": "probability",
              "batched": true
            }
          },
          {
            "name": "AddGuidanceSignald",
            "path": "monai.apps.deepgrow.transforms.AddGuidanceSignald",
            "args": {
              "image": "image",
              "guidance": "guidance",
              "batched": true
            }
          },
          {
            "name": "ToTensord",
            "path": "monai.transforms.ToTensord",
            "args": {
              "keys": [
                "image",
                "label"
              ]
            }
          }
        ],
        "train": false
      }
    },
    "handlers": [
      {
        "name": "StatsHandler",
        "rank": 0,
        "args": {
          "output_transform": "lambda x: None"
        }
      },
      {
        "name": "TensorBoardStatsHandler",
        "rank": 0,
        "args": {
          "log_dir": "{MMAR_CKPT_DIR}",
          "output_transform": "lambda x: None"
        }
      },
      {
        "name": "DeepgrowStatsHandler",
        "path": "deepgrow.handler.DeepgrowStatsHandler",
        "rank": 0,
        "args": {
          "log_dir": "{MMAR_CKPT_DIR}",
          "tag_name": "val_dice",
          "image_interval": 5
        }
      },
      {
        "name": "CheckpointSaver",
        "rank": 0,
        "args": {
          "save_dir": "{MMAR_CKPT_DIR}",
          "save_dict": [
            "model"
          ],
          "save_key_metric": true,
          "save_interval": 10,
          "save_final": true,
          "final_filename": "model_final.pt"
        }
      }
    ],
    "post_transforms": [
      {
        "ref": "Activationsd"
      },
      {
        "ref": "AsDiscreted"
      }
    ],
    "metrics": [
      {
        "name": "MeanDice",
        "log_label": "val_dice",
        "is_key_metric": true,
        "args": {
          "include_background": false,
          "output_transform": "lambda x: (x['pred'], x['label'])"
        }
      }
    ],
    "evaluator": {
      "name": "SupervisedEvaluator"
    }
  }
}