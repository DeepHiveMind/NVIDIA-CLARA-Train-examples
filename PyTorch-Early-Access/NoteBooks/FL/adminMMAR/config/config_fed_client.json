{
  "format_version": 1,
    "servers": [
        {
          "name": "spleen_segmentation"
        }
    ],
    "client": {
      "outbound_filters": [
        {
          "path": "medl.apps.fed_learn.client.metadata_generator.IteratorNumberGenerator",
          "args": {
              "field": "n_iter"
          }
        },
        {
            "path": "medl.apps.fed_learn.client.metadata_generator.BestMetricGenerator",
            "args": {
                "field": "best_validation_metric"
            }
        }
      ],
      "inbound_filters": [
      ]
    },
  "client_trainer": {
    "path": "medl.apps.fed_learn.trainers.client_trainer.ClientTrainer",
    "args": {
      "local_epochs": 2,
      "steps_aggregation": 0,
      "model_reader_writer": {
          "name": "PTModelReaderWriter"
      }
    }
  },
  "handlers": [
  ],
  "cross_validate": true,
  "cross_site_validation": {
      "is_participating": true,
      "model_validator": {
          "path": "medl.apps.fed_learn.validators.client_validator.ClientValidator",
          "args": {}
      },
      "inbound_filters": [],
      "outbound_filters": []
  }
}
